{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "short_name": "__MSG_extensionNameShort__",
  "version": "0.1",
  "author": "rugk",

  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/rugk/googerteller",

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "background": {
    "page": "background/background.html"
  },

  "content_security_policy": "default-src 'self'; connect-src https://www.gstatic.com",
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "default_locale": "en",

  "permissions": [
    "storage",
    "webRequest",
    "dns",
    "<all_urls>"
  ],

  "applications": {
    "gecko": {
      "id": "googer-teller@rugk.github.io",
      "strict_min_version": "60.0a1"
    }
  }
}
